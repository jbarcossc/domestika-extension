{
  "name": "YouTube Playlist Duration",
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "version": "0.1",
  "description": "Displays YouTube playlist duration",
  "permissions": ["activeTab", "scripting"],
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["auxiliary.js"]
  }]
}